extends layout-signout.pug

append head
  script(src="/public/js/hosting.js" type="module" defer)
  link(rel="stylesheet" href="public/css/hosting.css" type="text/css")

block content
  .main-container
    .banner-container
      p.banner-heading Host your own event!
      p.banner-text What are you waiting for?
    .hosting-container
      p.description-heading Please fill out all the fields to host your own event!
      .hosting-form
        input.form-input(type="hidden" name="_csrf" value=csrfToken)
        input.form-input(type="text" name='event' required placeholder='    Event Name')
        input.form-input(type="textarea" name='description' required placeholder='   Brief description of the event')
        input.form-input(type="date" name='date' required placeholder='    Select your date')
        input.form-input(type="time" name='time' required placeholder='    Select your time')
        input.form-input(type="select" name='eventType' required placeholder='    Select your event type')
        input.form-input(type="select" name='capacity' required placeholder='    How big do you want your meeting?')
