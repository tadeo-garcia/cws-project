  link(rel="stylesheet" href="/public/css/event-join.css" type="text/css")
block content
  .main-container
    .banner-container
      img.banner(src=event.EventType.eventBanner)
    .event-container
      .left-column
        .event-detail
          p.description-heading Join #{event.host.fullName} for #{event.EventType.type} !
          span.description-text #{event.EventType.eventDescription}
