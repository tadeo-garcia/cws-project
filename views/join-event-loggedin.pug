extends layout-signout.pug

append head
  script(src="/public/js/eventid.js" type="module" defer)
  link(rel="stylesheet" href="/public/css/event-join.css" type="text/css")

block content
  .main-container
    .banner-container
      img.banner(src='/'+event.EventType.eventBanner)
    .text-container
      p.description-heading Join #{event.host.fullName} for #{event.EventType.type} !
      p.description-text #{event.EventType.eventDescription}
      br
      .button-div
        a.button.join-button(id=event.id href='/dashboard') Join Event