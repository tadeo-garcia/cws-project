extends layout.pug

append head
  link(rel="stylesheet" href="/public/css/eventJoin3.css" type="text/css")

block content
  .joinEvent-container
    .columnOne
      .joinEventInfo
        .joinEventInfo-heading
          h2 JOIN #{event.host.fullName} FOR COVID WITH STALKERS
        hr
        .joinEventInfo-info
          p #{event.date}
          p #{event.time}
          p Online Zoom
          h5 #{url}
          p Send to a friend that should  be here (especially if you can't   be here yourself!)
          hr
          h2  #{event.capacity} SEATS LEFT!
        .joinEvent-capacity
          .progressBar
            .bar(style='width:83.3333334%')
              - var n = 0;
                while n < event.capacity
                if
                  p.progressBar-count= n++
                  .barDiv


      .joinEventForm
      .teaTimeAbout
    .columnTwo
      .meetTheHost
      .hostBio


