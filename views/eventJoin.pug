    .eventJoin
      img#eventTypeBanner(src=event.EventType.eventBanner width='100%')
    .joinEvent-container
      .columnOne
        .joinEventInfo
          .joinEventInfo-heading
            h4 JOIN #{host.fullName.toUpperCase()} FOR COVID WITH STALKERS
